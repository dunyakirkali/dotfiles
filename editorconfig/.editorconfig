root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_size = 4

[*.pl]
indent_size = 2
indent_style = space

[*.t]
indent_size = 4
indent_style = space

[*.md]
indent_size = 2
indent_style = space

[*.ex]
indent_size = 2
indent_style = space

[*.exs]
indent_size = 2
indent_style = space
